@model MvcTest.Models.CategoryModel
@{
	Layout = "~/Views/Shared/_Layout.cshtml";
}


@{
	var message = TempData["AlertMessage"] ?? string.Empty;
}

<script type="text/javascript">
 var message = '@message';

if(message) alert(message);

</script>

<br>
<br>

<div id="main-content">
	<div class="container-fluid">
		<br>
		<div class="row clearfix">
			<div class="col-lg-12 col-md-12">
				<div class="card">
					<div class="header">
						<h2>Are You Sure To Delete Record From Table?</h2>
						<div class="box-tools pull-right">
							<button type="button" class="btn dropdown-toggle  btn-primary" onclick="location.href='@Url.Action("Category", "Category")'">
								<i class="icon-arrow-left"></i> Back To List
							</button>
						</div>
					</div>
					<div class="body">
						@using (Html.BeginForm("DeleteCategory", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
						{
							<div class="row">
								<div class="col-lg-2 col-md-12">
									<label>Id</label>
									<div class="input-group mb-3">
										@Html.TextBoxFor(model => model.cat_id, htmlAttributes: new { @id = "catid", @placeholder = "Id", @class = "form-control", @readonly = "readonly" })
									</div>
								</div>
								<div class="col-lg-4 col-md-12">
									<label>Name</label>
									<div class="input-group mb-3">
										@Html.TextBoxFor(model => model.cat_name, htmlAttributes: new { @id = "catname", @placeholder = "Enter Category Name", @class = "form-control", @readonly = "readonly" })
									</div>
								</div>
								<div class="col-lg-4 col-md-12">
									<br>
									<button id="validate" type="submit" class="btn btn-primary">Submit</button>
								</div>
							</div>
						}
					</div>
				</div>
			</div>

		</div>

	</div>
</div>




@section Scripts {
	<script type="text/javascript">
		$(function () {
			$('#validate').click(function () {
				var summary = "";
				summary += isvalidcatid();

				if (summary != "") {
					alert(summary);
					return false;
				}
				else {
					return true;
				}
			})
		})


		function isvalidcatid() {
			var temp = $("#catid").val();
			if (temp == "") {
				return ("Please Enter Id " + "\n");
			}
			else {
				return "";
			}
		}
	</script>
}